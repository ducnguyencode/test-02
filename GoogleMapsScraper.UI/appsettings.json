{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "UseUtcTimestamp": false,
        "IncludeScopes": true
      }
    },
    "File": {
      "Path": "logs/scraper-.log",
      "Append": true,
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 10
    }
  },
  "ScraperDefaults": {
    "MaxResults": 100,
    "MinDelayBetweenRequests": 1000,
    "MaxDelayBetweenRequests": 3000,
    "RequestTimeoutMs": 30000,
    "MaxRetryAttempts": 3,
    "CaptchaSolverUrl": "https://2captcha.com/"
  }
} 